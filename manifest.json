{
  "manifest_version": 3,
  "name": "Habit Tracker",
  "version": "1.0.1",
  "description": "A minimal habit tracker that replaces your new tab page with a year visualization and mindful website time management",
  "permissions": [
    "storage",
    "tabs",
    "idle",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["js/content.js"],
    "run_at": "document_start"
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
