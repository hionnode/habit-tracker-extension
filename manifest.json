{
  "manifest_version": 3,
  "name": "Habit Tracker",
  "version": "1.0.0",
  "description": "A minimal habit tracker that replaces your new tab page with a year visualization",
  "permissions": ["storage", "tabs", "idle", "alarms"],
  "background": {
    "service_worker": "js/background.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
